---
import { siteConfig } from "../config";
---

<header class="py-12 fixed w-full z-10 top-0 left-0 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center">
    <a href="/portfolio" class="text-2xl font-bold tracking-tight text-gray-800">
      {siteConfig.name.split(" ")[0]}
    </a>
    <nav>
      <ul class="flex space-x-6 sm:space-x-8 md:space-x-12">
        <li>
          <a
            href="#about"
            class="text-base font-medium text-gray-600 hover:text-[var(--accent-color)] transition-colors duration-300"
          >
            About
          </a>
        </li>
        <li>
          <a
            href="#projects"
            class="text-base font-medium text-gray-600 hover:text-[var(--accent-color)] transition-colors duration-300"
          >
            Projects
          </a>
        </li>
        <li>
          <a
            href="#experience"
            class="text-base font-medium text-gray-600 hover:text-[var(--accent-color)] transition-colors duration-300"
          >
            Experience
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>