---
import { siteConfig } from "../config";
import type { Project } from "../config";
import Tableau from "./Tableau.astro";

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;

const tableauSkills = ["Tableau", "SQL", "MySQL Workbench 8.0.40"];
---

<div id="projects" class="py-16 bg-white sm:py-24">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2
        class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl"
        style={`color: ${siteConfig.accentColor}`}
      >
        Projects
      </h2>
      <p class="mt-6 text-lg/8 text-gray-600">
        These are some of the projects I've built using various technologies and tools.
      </p>
    </div>
    <div
      class="mx-auto mt-16 max-w-2xl flex flex-col gap-y-16 lg:max-w-none"
    >
      <a
        href="https://github.com/JevaughnNewman/Target-E-Commerce-Sales-Data-Project"
        target="_blank"
        rel="noopener noreferrer"
        class="flex flex-col rounded-lg overflow-hidden h-full shadow-lg transition-transform duration-300 hover:scale-105"
      >
        <div class="flex-1 w-full aspect-video">
          <Tableau />
        </div>
        <div class="flex-1 w-full p-6 bg-white flex flex-col justify-between">
          <div>
            <h3 class="text-2xl font-bold text-gray-800">
              Target Ecommerce Executive Dashboard
            </h3>
            <p class="mt-4 text-gray-600">
              Analyzed Target's Brazil e-commerce data to uncover sales trends, customer segments, and top products. Delivered insights through Tableau dashboards and a detailed report with actionable business recommendations.
            </p>
            <div class="mt-4 flex flex-wrap gap-2">
              {
                tableauSkills.map((skill) => (
                  <span
                    class="bg-gray-200 text-gray-700 text-sm px-3 py-1 rounded-full font-medium"
                  >
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>
          <div class="mt-6 text-sm text-blue-600 font-bold">
            View Project on GitHub →
          </div>
        </div>
      </a>
      {
        projects.map((project) => (
          <a
            href={project.link}
            target="_blank"
            rel="noopener noreferrer"
            class="flex flex-col rounded-lg overflow-hidden h-full shadow-lg transition-transform duration-300 hover:scale-105"
          >
            <div class="flex-1 w-full aspect-video">
              <iframe
                class="w-full h-full"
                src={project.embedUrl}
                frameborder="0"
                allowfullscreen="true"
                allow="fullscreen"
              ></iframe>
            </div>
            <div
              class="flex-1 w-full p-6 bg-white flex flex-col justify-between"
            >
              <div>
                <h3 class="text-2xl font-bold text-gray-800">{project.name}</h3>
                <p class="mt-4 text-gray-600">{project.description}</p>
                <div class="mt-4 flex flex-wrap gap-2">
                  {
                    project.skills.map((skill) => (
                      <span
                        class="bg-gray-200 text-gray-700 text-sm px-3 py-1 rounded-full font-medium"
                      >
                        {skill}
                      </span>
                    ))
                  }
                </div>
              </div>
              <div class="mt-6 text-sm text-blue-600 font-bold">
                View Project on GitHub →
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</div>